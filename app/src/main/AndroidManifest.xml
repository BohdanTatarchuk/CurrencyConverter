<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/square_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/square_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Converter"
        tools:targetApi="31">
        <activity
            android:name=".UILayer.ChangePasswordActivity"
            android:exported="false" />
        <activity
            android:name=".UILayer.SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UILayer.SingUpActivity"
            android:exported="true"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".UILayer.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UILayer.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>